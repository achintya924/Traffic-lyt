# PostgreSQL (used by docker-compose for db service)
POSTGRES_DB=trafficlyt
POSTGRES_USER=trafficlyt
POSTGRES_PASSWORD=trafficlyt_secret

# API: database connection (container uses host "db")
# For docker-compose: postgresql://trafficlyt:trafficlyt_secret@db:5432/trafficlyt
DATABASE_URL=postgresql://trafficlyt:trafficlyt_secret@db:5432/trafficlyt

# API: CORS allowed origins (comma-separated; browser requests from web app)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Web: API base URL for browser requests (browser runs on host, so use localhost)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
